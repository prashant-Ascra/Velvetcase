<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:orientation="vertical" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp" >
        </RelativeLayout>
    </RelativeLayout>



    <ImageView
        android:id="@+id/jwel_imag"
        android:layout_width="155dp"
        android:layout_height="148dp"
       android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/ring" 
        />

    <View
        android:id="@+id/diamond_undeline"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
       android:layout_marginTop="5dp"
        android:layout_below="@+id/metal_heading"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="40dp"
        android:background="#000000" />

    <antistatic.spinnerwheel.WheelVerticalView
        android:id="@+id/third_whel"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_alignBaseline="@+id/city"
        android:layout_alignBottom="@+id/city"
        android:layout_alignRight="@+id/diamond_undeline" />

    <TextView
        android:id="@+id/diamond_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@+id/jwel_price"
        android:text="METAL"
        android:textSize="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignLeft="@+id/country"
        android:layout_alignRight="@+id/third_whel"
        android:layout_below="@+id/third_whel"
        android:background="#000000"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="82dp"
        android:layout_height="30dp"
        android:layout_below="@+id/progressBar1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/sign_in_back"
        android:text="SHOPE NOW"
        android:padding="4dp"
        android:textSize="12dp"
        android:layout_marginTop="7dp"
        android:textColor="#ffffff"
         />

    <ImageView
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/arrow_icon" />

    <antistatic.spinnerwheel.WheelVerticalView
        android:id="@+id/city"
        android:layout_width="100dp"
        android:layout_height="80dp"
		android:layout_below="@+id/diamond_undeline"       
        android:layout_toLeftOf="@+id/third_whel" />

    <TextView
        android:id="@+id/metal_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@+id/jwel_price"
        android:layout_toRightOf="@+id/diamond_heading"
        android:text="DIAMOND"
        android:textSize="10dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/jwel_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toRightOf="@+id/textView1"
        android:text="5,010"
        android:textSize="44dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jwel_imag"
       android:layout_marginLeft="92dp"
        android:text="\u20B9"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/stone_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jwel_price"
        android:layout_alignLeft="@+id/metal_heading"
        android:layout_marginTop="40dp"
        android:text="STONE"
        android:paddingBottom="2dp"
        android:layout_marginLeft="57dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="10dp" />

    <antistatic.spinnerwheel.WheelVerticalView
        android:id="@+id/country"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_above="@+id/progressBar1"
        android:layout_alignLeft="@+id/diamond_undeline" />

</RelativeLayout>