        android:text="CONNECT WITH FACEBOOK" />-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/facebook_btn"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/fb_icon"/>

    <EditText
        android:id="@+id/email_box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/facebook_btn"
        android:layout_marginTop="36dp"
        android:hint="Email"
        android:text=""
        android:inputType="textEmailAddress"
        android:paddingLeft="5dp"
        android:background="#00000000"
        android:textColor="@color/black">
        
        
    </EditText>
    <View 
        android:id="@+id/email_box_underbar"
        android:layout_width="fill_parent"
        android:layout_below="@+id/email_box"
        android:layout_height="1dp"

        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@android:color/darker_gray"/>
    
    <EditText
        android:id="@+id/pwd_box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@+id/email_box_underbar"
        android:layout_marginTop="28dp"
        android:hint="Password"
        android:text=""
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:background="#00000000" />
        
        <View 
            android:id="@+id/pwd_underbar"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/pwd_box"

            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@android:color/darker_gray"/>
       <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="34dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/pwd_underbar"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="SIGN IN" 
        android:textSize="16sp"
        android:background="@drawable/sign_in_back"/>

    <TextView
        android:id="@+id/forgot_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_below="@+id/button1"

        android:text="Forgot Password?"
        android:padding="8dp"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/button1"
        android:layout_alignTop="@+id/forgot_pwd"
        android:text="Join"
        android:textSize="14sp"
        android:padding="8dp"
        android:textColor="@android:color/darker_gray"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
