<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white_light">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"

            android:clickable="true"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="3dp"
            card_view:cardBackgroundColor="@color/white"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="26dp"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="40dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AWESOME!"
                    android:id="@+id/textView7"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="THAT'S AN INCREDIBLE LOOK!"
                    android:gravity="center_horizontal"
                    android:id="@+id/textView8"
                    android:layout_below="@+id/textView7"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"

                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YOUR VELVETCASE CREDITS HAVE BEEN ADDED TO YOUR ACCOUNT"
                    android:id="@+id/textView9"
                    android:gravity="center"
                    android:layout_below="@+id/textView8"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView5"
                    android:src="@drawable/close_icon"
                    android:padding="8dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="15dp"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:src="@drawable/contact"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="7dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:id="@+id/imageView9"
            android:src="@drawable/fb"

            android:layout_marginRight="23dp"
            android:layout_marginEnd="23dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="90dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:id="@+id/twitter_icon"
            android:src="@drawable/twitter"
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            android:id="@+id/pintrest_icon"
            android:src="@drawable/social"
            android:layout_marginRight="28dp"
            android:layout_marginEnd="28dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="190dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="#AnniversaryLook"
            android:textColor="#000000"
            android:id="@+id/lookname"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/imageView9"
            android:layout_marginLeft="70dp"
            android:layout_alignRight="@+id/imageView10"
            android:layout_alignEnd="@+id/imageView10" />

        <View android:id="@+id/view_underlookname"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/lookname"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="60dp"
            android:background="#000000"
            />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="SHARE"
            android:textColor="@color/black"
            android:id="@+id/template_btn"
            android:layout_below="@+id/view_underlookname"
            android:padding="10dp"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button"
            android:layout_centerHorizontal="true" />

        <TwoLineListItem
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="right|bottom"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"></TwoLineListItem>
    </RelativeLayout>


</FrameLayout>
