<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/template_cardview_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:visibility="visible">

            <ImageView

                android:id="@+id/template_image"
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"

                android:src="@drawable/girl"
                />
            <TextView
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/template_image"
                android:gravity="center"
                android:background="#ffcccccc">
            </TextView>
        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"

            android:visibility="visible"
            >

            <View
                android:id="@+id/back_green1"
                android:layout_width="92dp"
                android:layout_height="82dp"
                android:scaleType="fitXY"
                android:background="#66CC99"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="40dp"

                />


            <ImageView
                android:id="@+id/variation_img1"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:layout_marginRight="40dp"
                android:paddingRight="2dp"
                android:paddingTop="2dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/transferent_box"
                />


            <View
                android:id="@+id/back_green2"
                android:layout_width="92dp"
                android:layout_height="82dp"
                android:scaleType="fitXY"
                android:background="#66CC99"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/variation_img1"
                android:layout_marginRight="40dp"/>

            <ImageView
                android:id="@+id/variation_img2"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:paddingRight="2dp"
                android:paddingTop="2dp"
                android:layout_below="@+id/variation_img1"
                android:layout_alignParentRight="true"
                android:src="@drawable/transferent_box"
                />

            <View
                android:id="@+id/back_green3"
                android:layout_width="92dp"
                android:layout_height="82dp"
                android:scaleType="fitXY"
                android:background="#66CC99"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/variation_img2"
                android:layout_marginRight="40dp"/>

            <ImageView
                android:id="@+id/variation_img3"
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:layout_marginRight="40dp"
                android:paddingRight="2dp"
                android:paddingTop="2dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/variation_img2"
                android:src="@drawable/transferent_box"
                />


        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:visibility="visible">


            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_marginRight="25dp"
                android:src="@drawable/save"

                android:layout_marginTop="235dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="25dp"
                android:id="@+id/img_save" />


        </RelativeLayout>

    </FrameLayout>

</RelativeLayout>

