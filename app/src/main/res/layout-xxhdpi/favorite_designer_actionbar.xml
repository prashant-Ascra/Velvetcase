<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout android:layout_width="fill_parent"
        android:layout_height="48dp"
        >


        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrow_icon"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/velvetcase_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/velvetcaselogo"
            android:layout_toRightOf="@id/back_arrow"
            android:layout_centerVertical="true"

            android:padding="10dp"
            android:visibility="visible"/>




        <TextView
            android:id="@+id/favorite_designer_text"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:padding="10dp"
            android:text="Favourite Designer"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/strip_one"
            android:layout_alignStart="@+id/strip_one" />
        <View
            android:id="@+id/strip_one"
            android:layout_width="160dp"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black"
            android:layout_marginLeft="90dp"

            >
        </View>
    </RelativeLayout>
</RelativeLayout>
